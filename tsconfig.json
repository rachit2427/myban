{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@root/*": [
        "./*"
      ],
    },
  },
  "exclude": [
    "vendor",
    "ios",
    "android"
  ],
  "include": [
    "__tests__/**/*",
    "src/**/*",
    ".*.js",
    "*.js",
    "*.ts",
    "**/*.json",
    "types/**/*",
    "scripts/**/*",
    "web/**/*"
  ]
}
